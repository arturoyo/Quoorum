{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": ".",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "demo.ts", "demo-standalone.ts", "cli.ts", "visualization/**/*.ts", "visualization/**/*.tsx"],
  "exclude": ["node_modules", "dist", "src/__tests__/**/*"]
}
